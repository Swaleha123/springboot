package com.example.demo.user.dao;

import java.util.List;
import java.util.Optional;

import org.springframework.data.repository.CrudRepository;

import com.example.demo.user.pojo.User;



public interface UserRepository extends CrudRepository<User,String> {

	com.example.demo.user.pojo.User findByUserNameAndPasswordAndConfirmed(String userName,String password,String confirmed);
	List<com.example.demo.user.pojo.User> findByUserNameOrPassword(String userName,String password);
	Optional<com.example.demo.user.pojo.User> findByEmail(String email);
	

}
